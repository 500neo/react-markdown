{
  "name": "react-markdown",
  "description": "Renders Markdown as React components",
  "version": "2.1.0",
  "keywords": [
    "commonmark",
    "markdown",
    "react",
    "react-component"
  ],
  "main": "src/react-markdown.js",
  "scripts": {
    "build": "NODE_ENV=production webpack -p",
    "coverage": "jest --coverage",
    "deploy": "gh-pages-deploy",
    "lint": "standard",
    "prepublish": "in-publish && npm run qa || not-in-publish",
    "aposttest": "npm run lint",
    "qa": "npm prune && npm test && npm run build",
    "test": "jest",
    "watch": "webpack --watch"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:rexxars/react-markdown.git"
  },
  "author": "Espen Hovlandsdal <rexxars@gmail.com>",
  "license": "MIT",
  "gh-pages-deploy": {
    "noprompt": true,
    "prep": [
      "build"
    ],
    "staticpath": "demo/dist"
  },
  "dependencies": {
    "in-publish": "^2.0.0",
    "object-assign": "^4.1.0",
    "prop-types": "^15.5.8",
    "remark-parse": "^2.0.2",
    "standard": "^10.0.2",
    "unified": "^5.1.0",
    "unist-util-visit": "^1.1.0"
  },
  "devDependencies": {
    "babel-jest": "^20.0.0",
    "babel-loader": "^7.0.0",
    "babel-preset-env": "^1.4.0",
    "babel-preset-react": "^6.24.1",
    "gh-pages-deploy": "^0.4.2",
    "htmltidy": "^0.0.6",
    "jest": "^20.0.0",
    "react": "^15.5.4",
    "react-addons-test-utils": "^15.5.1",
    "react-dom": "^15.5.4",
    "react-test-renderer": "^15.5.4",
    "webpack": "^2.5.1"
  },
  "peerDependencies": {
    "react": "^15.0.0"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**.js"
    ]
  },
  "standard": {
    "ignore": [
      "/coverage",
      "/demo/dist",
      "/node_modules",
      "/umd"
    ]
  }
}
